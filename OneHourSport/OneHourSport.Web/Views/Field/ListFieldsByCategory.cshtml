@model PagedList.IPagedList<OneHourSport.Web.Models.Field.FieldDisplayViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var index = 1;
}

@foreach (var item in Model)
{
    item.Index = index;
    Html.RenderPartial("~/Views/Field/_FieldDisplayPartial.cshtml", item);
    index++;
}

@Html.Partial("_PagingPartial", Model)

@section styles{
    @Styles.Render("~/Content/rating")
}

@section scripts{
    @Scripts.Render("~/bundles/rating")
    <script type="text/javascript">
        $(document).on('ready', function () {
            $('.rateClass').rating('refresh', { displayOnly: true });
        });

    </script>
}