@model ICollection<OneHourSport.Web.Models.Field.FieldDisplayViewModel>

@{
    Layout = null;
    var i = 1;
}

@foreach (var field in Model)
{
    field.Index = i;
    Html.RenderPartial("~/Views/Field/_FieldDisplayPartial.cshtml", field);
    i++;
    <hr />
}
@section styles{
    @Styles.Render("~/Content/rating")
}

@section scripts{
    @Scripts.Render("~/bundles/rating")
    <script type="text/javascript">
        $(document).on('ready', function () {
            $('.rateClass').rating('refresh', { displayOnly: true });

        });
    </script>
}